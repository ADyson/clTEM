<extra:OverlayWindow x:Class="SimulationGUI.Dialogs.AberrationsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:extra="http://schemas.extra.com/ui"      
        xmlns:params="http://schemas.codeplex.com/elysium/params"
        xmlns:controls="clr-namespace:SimulationGUI.Controls"

        params:Design.Theme="{DynamicResource ThemeCol}"
        params:Design.AccentBrush="{DynamicResource Accent}"
        params:Design.ContrastBrush="{DynamicResource Contrast}"
              
        params:Manager.Theme="{DynamicResource  ThemeCol}"
        params:Manager.AccentBrush="{DynamicResource Accent}"
        params:Manager.ContrastBrush="{DynamicResource Contrast}"
              
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource TextColourLight}"
                     
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Microscope" Margin="20">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="0" FontSize="32" Grid.ColumnSpan="4" Margin="0,0,0,5"
                Text="Microscope" HorizontalAlignment="Left" VerticalAlignment="Center" />



        <TextBlock Text="kV :" Grid.Column="2" Grid.Row="1" Foreground="{DynamicResource TextColourLight}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,2.5,0"/>
        <TextBox x:Name="txtVoltage" Text="{Binding Path = SVal, Mode = TwoWay}"
                        Grid.Column="3" Grid.Row="1" VerticalAlignment="Center"
                        controls:MaskedTextBox.Mask="^([\+]?[0-9]*\.?[0-9]*)*$" Height="{StaticResource ControlHeight}"
                        controls:TextBoxBehavior.SelectAllOnFocus="True" Margin="2.5, 2.5, 12.5, 2.5"  Width="{StaticResource ControlWidth}" />

        <TextBlock Text="Aper :" Grid.Column="4" Grid.Row="1" Foreground="{DynamicResource TextColourLight}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,2.5,0"/>
