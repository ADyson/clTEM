                        controls:TextBoxBehavior.SelectAllOnFocus="True" Margin="2.5, 2.5, 12.5, 2.5"  Width="{StaticResource ControlWidth}" />

        <TextBlock Text="Δ :" Grid.Column="8" Grid.Row="1" Foreground="{DynamicResource TextColourLight}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,2.5,0"/>
