                        Grid.Column="5" Grid.Row="1" VerticalAlignment="Center"
                        controls:MaskedTextBox.Mask="^[\+]?[0-9]*\.?[0-9]*$" Height="{StaticResource ControlHeight}"
                        controls:TextBoxBehavior.SelectAllOnFocus="True" Margin="2.5, 2.5, 12.5, 2.5"  Width="{StaticResource ControlWidth}" />

        <TextBlock Text="β :" Grid.Column="6" Grid.Row="1" Foreground="{DynamicResource TextColourLight}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,2.5,0"/>
