            <SolidColorBrush x:Key="PanelBackground" Color="#FF171717"/>
            <SolidColorBrush x:Key="PanelDark" Color="#FF252525"/>
            <SolidColorBrush x:Key="PanelLight" Color="#FF313131"/>

            <SolidColorBrush x:Key="TextColourLight" Color="White"/>
