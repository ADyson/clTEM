<ResourceDictionary x:Class="GPUTEMSTEMSimulation.resourceDictionary"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:t="clr-namespace:ErrTextBox"
                    xmlns:metro="http://schemas.codeplex.com/elysium">
    
    <ControlTemplate x:Key="gbox" TargetType="GroupBox">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0" BorderThickness="0,0,2,0" BorderBrush="Black" Background="#FF252525">
                <Border Grid.Row="0" BorderThickness="0,0,0,2" BorderBrush="{x:Static metro:AccentBrushes.Blue}">
                    <TextBlock HorizontalAlignment="Center" Margin="5">
                        <ContentPresenter Margin="1" ContentSource="Header" RecognizesAccessKey="True" />
                    </TextBlock>
                </Border>
            </Border>
            <Border Grid.Row="1" BorderThickness="0,0,2,0" Background="#FF252525">
                <ContentPresenter Margin="4" />
            </Border>
        </Grid>
    </ControlTemplate>

</ResourceDictionary>