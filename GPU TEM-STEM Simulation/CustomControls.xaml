<ResourceDictionary x:Class="GPUTEMSTEMSimulation.resourceDictionary"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:t="clr-namespace:ErrTextBox">

    <ControlTemplate x:Key="gbox" TargetType="GroupBox">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0" BorderThickness="0,0,0,0" BorderBrush="#C8D2DC" Background="#C8D2DC">
                <Label Foreground="Black">
                    <ContentPresenter Margin="1" ContentSource="Header" RecognizesAccessKey="True" />
                </Label>
            </Border>
            <Border Grid.Row="1" BorderThickness="0,0,1,1" BorderBrush="#C8D2DC">
                <ContentPresenter Margin="4" />
            </Border>
        </Grid>
    </ControlTemplate>

</ResourceDictionary>