<Window x:Name="Multislice_Simulation" x:Class="GPUTEMSTEMSimulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:MaskNameSpace="clr-namespace:MaskedTextBox"
        xmlns:local="clr-namespace:PanAndZoom"
        Title="Multislice Simulation" MinWidth ="1360" MinHeight="850" Height="791.5" Width="1283.5">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="120*"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Header="Import Structure" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Height="120" Width="140">
            <GroupBox.Foreground>
                <SolidColorBrush Color="{DynamicResource GroupBoxTitle}"/>
            </GroupBox.Foreground>
            <Grid HorizontalAlignment="Left" Height="97.04" VerticalAlignment="Top" Width="120" Margin="0,0,-2,0">
                <Button Content="Import Structure" HorizontalAlignment="Left" Height="39" VerticalAlignment="Top" Width="108" Margin="10,10,0,0" Click="ImportStructureButton"/>
                <Button IsEnabled="False" Content="Import Unit Cell" HorizontalAlignment="Left" Height="39" VerticalAlignment="Top" Width="108" Margin="10,54,0,0" Click="ImportUnitCellButton"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Structure Information" HorizontalAlignment="Left" Height="120" Margin="155,0,0,0" VerticalAlignment="Top" Width="209">
            <GroupBox.Foreground>
                <SolidColorBrush Color="{DynamicResource GroupBoxTitle}"/>
            </GroupBox.Foreground>
            <Grid HorizontalAlignment="Left" Height="97.04" VerticalAlignment="Top" Width="196.5">
                <Label Name="WidthLabel" Content="Width (A): " HorizontalAlignment="Left" VerticalAlignment="Top" Width="196.5"/>
                <Label Name="HeightLabel" Content="Height (A): " HorizontalAlignment="Left" VerticalAlignment="Top" Width="196.5" Margin="0,25.96,0,0"/>
                <Label Name="DepthLabel" Content="Depth (A): " HorizontalAlignment="Left" VerticalAlignment="Top" Width="196.5" Margin="0,51.92,0,0"/>
                <Label Name="PixelScaleLabel" Content="Pixel Size (A):" HorizontalAlignment="Left" VerticalAlignment="Top" Width="196.5" Margin="0,77.88,0,-6.8"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Simulation Type" HorizontalAlignment="Left" Height="120" Margin="369,0,0,0" VerticalAlignment="Top" Width="123" >
            <GroupBox.Foreground>
                <SolidColorBrush Color="{DynamicResource GroupBoxTitle}"/>
            </GroupBox.Foreground>
            <Grid HorizontalAlignment="Left" Height="100.04" Margin="0,0,-2,-3" VerticalAlignment="Top" Width="112.5">
                <RadioButton Name="TEMRadioButton" Content="TEM" HorizontalAlignment="Center" VerticalAlignment="Top" Height="19.96" Width="90.5" Margin="22,15,0,0" Checked="SimTypeRadio_Checked"/>
                <RadioButton Name="CBEDRadioButton" Content="CBED" HorizontalAlignment="Center" VerticalAlignment="Top" Height="19.96" Width="90.5" Margin="22,34.96,0,0" Checked="SimTypeRadio_Checked"/>
                <RadioButton Name="STEMRadioButton" Content="STEM" HorizontalAlignment="Center" VerticalAlignment="Top" Height="19.96" Width="90.5" Margin="22,54.92,0,0" Checked="SimTypeRadio_Checked"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Options" HorizontalAlignment="Left" Height="120" Margin="497,0,0,0" VerticalAlignment="Top" Width="167" >
            <GroupBox.Foreground>
                <SolidColorBrush Color="{DynamicResource GroupBoxTitle}"/>
            </GroupBox.Foreground>
            <Grid HorizontalAlignment="Left" Height="100" Margin="0,0,-2,-2.96" VerticalAlignment="Top" Width="156.5">
                <CheckBox Content="Frozen Phonon" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <CheckBox Content="Absorptive Potential" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
                <CheckBox Content="Full 3D Potential" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
                <ComboBox Name="ResolutionCombo" HorizontalAlignment="Left" Margin="76,71,0,0" VerticalAlignment="Top" Width="70" SelectionChanged="ComboBox_SelectionChanged_1" SelectedValuePath="Content">
                    <ComboBoxItem Content="256"/>
                    <ComboBoxItem Content="512"/>
                    <ComboBoxItem Content="1024"/>
                    <ComboBoxItem Content="2048"/>
                </ComboBox>
                <Label Content="Resolution" HorizontalAlignment="Left" Margin="0,70,0,0" VerticalAlignment="Top" Width="71" HorizontalContentAlignment="Right"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Wave Function" HorizontalAlignment="Left" Height="120" Margin="669,0,0,0" VerticalAlignment="Top" Width="323" >
            <GroupBox.Foreground>
                <SolidColorBrush Color="{DynamicResource GroupBoxTitle}"/>
            </GroupBox.Foreground>
            <Grid HorizontalAlignment="Left" Height="98" VerticalAlignment="Top" Width="313" Margin="0,0,-2,0">
                <TextBox MaskNameSpace:Masking.Mask="^[\+-]?[0-9]*\.?[0-9]*$" Name="ImagingDf" HorizontalAlignment="Left" Height="22" Margin="43,4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ImagingDf_TextChanged"/>
                <Label Content="df:" HorizontalAlignment="Left" Margin="7,2,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox MaskNameSpace:Masking.Mask="^[\+-]?[0-9]*\.?[0-9]*$" Name="ImagingCs" HorizontalAlignment="Left" Height="22" Margin="43,28,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ImagingCs_TextChanged"/>
                <Label Content="Cs:" HorizontalAlignment="Left" Margin="7,26,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox MaskNameSpace:Masking.Mask="^[\+-]?[0-9]*\.?[0-9]*$" Name="ImagingA1" HorizontalAlignment="Left" Height="22" Margin="43,52,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ImagingA1_TextChanged"/>
                <Label Content="A1:" HorizontalAlignment="Left" Margin="7,50,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox MaskNameSpace:Masking.Mask="^[\+-]?[0-9]*\.?[0-9]*$" Name="ImagingA1theta" HorizontalAlignment="Left" Height="22" Margin="43,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ImagingA1theta_TextChanged"/>
                <Label Content="A1 θ:" HorizontalAlignment="Left" Margin="3,73,0,-1" VerticalAlignment="Top" Width="40" HorizontalContentAlignment="Right"/>
                <TextBox MaskNameSpace:Masking.Mask="^[\+-]?[0-9]*\.?[0-9]*$" Name="ImagingkV" HorizontalAlignment="Left" Height="22" Margin="138,4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ImagingkV_TextChanged"/>
                <Label Content="kV:" HorizontalAlignment="Left" Margin="102,2,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox MaskNameSpace:Masking.Mask="^[\+-]?[0-9]*\.?[0-9]*$" Name="Imagingbeta" HorizontalAlignment="Left" Height="22" Margin="138,28,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="Imagingbeta_TextChanged"/>
                <Label Content="β:" HorizontalAlignment="Left" Margin="102,26,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox MaskNameSpace:Masking.Mask="^[\+-]?[0-9]*\.?[0-9]*$" Name="Imagingdelta" HorizontalAlignment="Left" Height="22" Margin="138,52,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="Imagingdelta_TextChanged"/>
                <Label Content="Δ:" HorizontalAlignment="Left" Margin="102,50,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox MaskNameSpace:Masking.Mask="^[\+-]?[0-9]*\.?[0-9]*$" Name="ImagingAperture" HorizontalAlignment="Left" Height="22" Margin="138,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ImagingAperture_TextChanged"/>
                <Label Content="Aper:" HorizontalAlignment="Left" Margin="98,73,0,-1" VerticalAlignment="Top" Width="40" HorizontalContentAlignment="Right"/>
                <TextBox MaskNameSpace:Masking.Mask="^[\+-]?[0-9]*\.?[0-9]*$" x:Name="ImagingA2" HorizontalAlignment="Left" Margin="248,0,0,72" TextWrapping="Wrap" Text="" Width="55" Height="22" VerticalAlignment="Bottom" TextChanged="ImagingA2_TextChanged" />
                <Label Content="A2:" HorizontalAlignment="Left" Margin="212,2,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox MaskNameSpace:Masking.Mask="^[\+-]?[0-9]*\.?[0-9]*$" x:Name="ImagingA2Phi" HorizontalAlignment="Left" Height="22" Margin="248,28,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ImagingA2Phi_TextChanged" />
                <Label Content="A2 θ:" HorizontalAlignment="Left" Margin="212,26,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox MaskNameSpace:Masking.Mask="^[\+-]?[0-9]*\.?[0-9]*$" x:Name="ImagingB2" HorizontalAlignment="Left" Height="22" Margin="248,52,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ImagingB2_TextChanged" />
                <Label Content="B2:" HorizontalAlignment="Left" Margin="212,50,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox MaskNameSpace:Masking.Mask="^[\+-]?[0-9]*\.?[0-9]*$" x:Name="ImagingB2Phi" HorizontalAlignment="Left" Height="22" Margin="248,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ImagingB2Phi_TextChanged"/>
                <Label Content="B2 θ:" HorizontalAlignment="Left" Margin="208,73,0,-1" VerticalAlignment="Top" Width="40" HorizontalContentAlignment="Right"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Simulation" HorizontalAlignment="Left" Height="120" Margin="1142,0,0,0" VerticalAlignment="Top" Width="140" >
            <GroupBox.Foreground>
                <SolidColorBrush Color="{DynamicResource GroupBoxTitle}"/>
            </GroupBox.Foreground>
            <Grid>
                <Button Name ="SimulateEWButton" Content="Simulate EW" HorizontalAlignment="Left" Height="39" Margin="10,10,0,0" VerticalAlignment="Top" Width="108" Click="Button_Click_1"/>
                <Button Name ="SimulateImageButton" IsEnabled="False" Content="Simulate Image" HorizontalAlignment="Left" Height="39" Margin="10,55,0,0" VerticalAlignment="Top" Width="108" Click="Button_Click_SimImage"/>
            </Grid>
        </GroupBox>
        <Grid Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"></ColumnDefinition>
                <ColumnDefinition Width=".5*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!-- Left Image Tab Control-->
            <TabControl Name="LeftTab" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="50,10,50,80" Grid.Row="1" >
                <TabItem Header="CTEM" Name="CTEMTab">
                    <Grid Background="#FFE5E5E5">
                        <local:ZoomBorder ClipToBounds="True">
                            <Image Name="CTEMImageDisplay" Height="Auto" Width="Auto"/>
                        </local:ZoomBorder>
                    </Grid>
                </TabItem>
                <TabItem Name="EWTab" Header="EW">
                    <Grid Background="#FFE5E5E5">
                        <local:ZoomBorder ClipToBounds="True">
                            <Image Name="EWImageDisplay" Height="Auto" Width="Auto" />
                        </local:ZoomBorder>
                    </Grid>
                </TabItem>
                <TabItem Name="BFTab" Header="BF">
                    <Grid Background="#FFE5E5E5">
                        <local:ZoomBorder ClipToBounds="True">
                            <Image Name="BFImageDisplay" Height="Auto" Width="Auto"/>
                        </local:ZoomBorder>
                    </Grid>
                </TabItem>
            </TabControl>
            <!-- Right Image Tab Control-->
            <TabControl Margin="50,10,50,80" Grid.Column="1" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <TabItem Header="Diffraction" Name="DiffTab">
                    <Grid Background="#FFE5E5E5">
                        <local:ZoomBorder ClipToBounds="True">
                            <Image Name="DiffImageDisplay" Height="Auto" Width="Auto" />
                        </local:ZoomBorder>
                    </Grid>
                </TabItem>
                <TabItem Header="N/A" IsEnabled="False">
                </TabItem>
            </TabControl>
            <Button Name="SaveImageButton" Content="Save Image" HorizontalAlignment="Right" Height="31" VerticalAlignment="Bottom" Width="103" Margin="0,0,50,40" Grid.Row="1" Click="SaveImageButton_Click" IsEnabled="False"/>
            <Button Name="SaveImageButton2" Content="Save Image" HorizontalAlignment="Right" Height="31" VerticalAlignment="Bottom" Width="103" Margin="0,0,50,40" Grid.Row="1" Grid.Column="1" Click="SaveImageButton2_Click" IsEnabled="False"/>


            <StatusBar HorizontalAlignment="Stretch" Height="34" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Bottom" BorderThickness="0,1,0,0" BorderBrush="#FFC1C1C1" HorizontalContentAlignment="Right">
                <StatusBar.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ItemsPanelTemplate>
                </StatusBar.ItemsPanel>
                <StatusBarItem>
                    <Label Margin="10,0,0,0" Name="atomNumberLabel" Grid.Column="0" Content="--" Width="100" HorizontalContentAlignment="Left" VerticalAlignment="Center" Height="34" Padding="0,5,15,3" Foreground="#FF575757" FontSize="11"/>
                </StatusBarItem>
                <StatusBarItem Grid.Column="1">
                    <Label Content="status message goes here..."></Label>
                </StatusBarItem>
                <StatusBarItem Grid.Column="2">
                    <Grid>
                        <ProgressBar Name="progressBar1" Value="0" Width="250" Height="15" Minimum="0" Maximum="100" Margin="0,8,0,-8"/>
                        <ProgressBar  Name="progressBar2" Value="0" Width="250" Height="15" Minimum="0" Maximum="100" Margin="0,-7,0,7"/>
                    </Grid>
                </StatusBarItem>
                <StatusBarItem Grid.Column="3" HorizontalAlignment="Right">
                    <Label Name="fileNameLabel" Grid.Column="1" Content="no structure loaded" Width="Auto" HorizontalContentAlignment="Right" VerticalAlignment="Center" Height="34" Padding="0,5,15,3" HorizontalAlignment="Right" Foreground="#FF575757" FontSize="11" />
                </StatusBarItem>
            </StatusBar>
        </Grid>
        <GroupBox Header="STEM" HorizontalAlignment="Left" Height="120" Margin="997,0,0,0" VerticalAlignment="Top" Width="140" >
            <GroupBox.Foreground>
                <SolidColorBrush Color="{DynamicResource GroupBoxTitle}"/>
            </GroupBox.Foreground>
            <Grid>
                <Button x:Name ="STEMDetButton" Content="Edit Detectors" HorizontalAlignment="Left" Height="39" Margin="10,10,0,0" VerticalAlignment="Top" Width="108" Click="STEMDet_Click"/>
                <Label Content="Number:" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top" Width="60" HorizontalContentAlignment="Left" RenderTransformOrigin="0.533,0.865"/>
                <Label x:Name="DetectorNumLabel" Content="0" HorizontalAlignment="Left" Margin="70,62,0,0" VerticalAlignment="Top" Width="48" HorizontalContentAlignment="Center"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
