<Window x:Name="Multislice_Simulation" x:Class="GPUTEMSTEMSimulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multislice Simulation" Height="818" Width="1282" ResizeMode="NoResize">
    <!--xmlns:MaskNameSpace="clr-namespace:MaskedTextBox"-->
    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="120"/>
			<RowDefinition Height="120*"/>
    	</Grid.RowDefinitions>
    	<GroupBox Header="Import Structure" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Height="120" Width="130">
            <GroupBox.Foreground>
                <SolidColorBrush Color="{DynamicResource GroupBoxTitle}"/>
            </GroupBox.Foreground>
            <Grid HorizontalAlignment="Left" Height="97.04" VerticalAlignment="Top" Width="120" Margin="0,0,-2,0">
    			<Button Content="Import Structure" HorizontalAlignment="Left" Height="31.04" VerticalAlignment="Top" Width="103" Margin="10,10,0,0" Click="ImportStructureButton"/>
    			<Button Content="Import Unit Cell" HorizontalAlignment="Left" Height="31.04" VerticalAlignment="Top" Width="103" Margin="10,46.04,0,0" Click="ImportUnitCellButton"/>
    		</Grid>
    	</GroupBox>
    	<GroupBox Header="Structure Information" HorizontalAlignment="Left" Height="120" Margin="139,0,0,0" VerticalAlignment="Top" Width="208.5">
            <GroupBox.Foreground>
                <SolidColorBrush Color="{DynamicResource GroupBoxTitle}"/>
            </GroupBox.Foreground>
    		<Grid HorizontalAlignment="Left" Height="97.04" VerticalAlignment="Top" Width="196.5">
    			<Label Name="WidthLabel" Content="Width (nm): " HorizontalAlignment="Left" VerticalAlignment="Top" Width="196.5"/>
                <Label Name="HeightLabel" Content="Height (nm): " HorizontalAlignment="Left" VerticalAlignment="Top" Width="196.5" Margin="0,25.96,0,0"/>
                <Label Name="DepthLabel" Content="Depth (nm): " HorizontalAlignment="Left" VerticalAlignment="Top" Width="196.5" Margin="0,51.92,0,0"/>
                <Label Name="PixelScaleLabel" Content="Pixel Size (nm):" HorizontalAlignment="Left" VerticalAlignment="Top" Width="196.5" Margin="0,77.88,0,-6.8"/>
    		</Grid>
    	</GroupBox>
    	<GroupBox Header="Simulation Type" HorizontalAlignment="Left" Height="120" Margin="346.5,0,0,0" VerticalAlignment="Top" Width="122.5" >
            <GroupBox.Foreground>
                <SolidColorBrush Color="{DynamicResource GroupBoxTitle}"/>
            </GroupBox.Foreground>
    		<Grid HorizontalAlignment="Left" Height="100.04" Margin="0,0,-2,-3" VerticalAlignment="Top" Width="112.5">
    			<RadioButton Name="TEMRadioButton" Content="TEM" HorizontalAlignment="Center" VerticalAlignment="Top" Height="19.96" Width="90.5" Margin="22,15,0,0"/>
    			<RadioButton Name="CBEDRadioButton" Content="CBED" HorizontalAlignment="Center" VerticalAlignment="Top" Height="19.96" Width="90.5" Margin="22,34.96,0,0"/>
    			<RadioButton Name="STEMRadioButton" Content="STEM" HorizontalAlignment="Center" VerticalAlignment="Top" Height="19.96" Width="90.5" Margin="22,54.92,0,0"/>
    		</Grid>
    	</GroupBox>
    	<GroupBox Header="Options" HorizontalAlignment="Left" Height="120" Margin="468,0,0,0" VerticalAlignment="Top" Width="166.5" >
            <GroupBox.Foreground>
                <SolidColorBrush Color="{DynamicResource GroupBoxTitle}"/>
            </GroupBox.Foreground>
    		<Grid HorizontalAlignment="Left" Height="100" Margin="0,0,-2,-2.96" VerticalAlignment="Top" Width="156.5">
    			<CheckBox Content="Frozen Phonon" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
    			<CheckBox Content="Absorptive Potential" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
                <CheckBox Content="Full 3D Potential" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
                <ComboBox Name="ResolutionCombo" HorizontalAlignment="Left" Margin="76,71,0,0" VerticalAlignment="Top" Width="70" SelectionChanged="ComboBox_SelectionChanged_1" SelectedValuePath="Content">
                    <ComboBoxItem Content="256"/>
                    <ComboBoxItem Content="512"/>
                    <ComboBoxItem Content="1024"/>
                    <ComboBoxItem Content="2048"/>
                </ComboBox>
                <Label Content="Resolution" HorizontalAlignment="Left" Margin="0,70,0,0" VerticalAlignment="Top" Width="71" HorizontalContentAlignment="Right"/>
                
            </Grid>
    	</GroupBox>
    	<GroupBox Header="Probe" HorizontalAlignment="Left" Height="120" Margin="633.5,0,0,0" VerticalAlignment="Top" Width="238.5" >
            <GroupBox.Foreground>
                <SolidColorBrush Color="{DynamicResource GroupBoxTitle}"/>
            </GroupBox.Foreground>
            <!-- This next like goes in text boxs but breaks design view even tho it compiles fine -->
            <!-- MaskNameSpace:Masking.Mask="^[\+-]?[0-9]*\.?[0-9]*$"-->
            <Grid HorizontalAlignment="Left" Height="98" VerticalAlignment="Top" Width="226">
                <TextBox  Name="ProbeDf" HorizontalAlignment="Left" Height="22" Margin="43,4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ProbeDf_TextChanged"/>
                <Label Content="df:" HorizontalAlignment="Left" Margin="7,2,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox Name="ProbeCs" HorizontalAlignment="Left" Height="22" Margin="43,28,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ProbeCs_TextChanged"/>
                <Label Content="Cs:" HorizontalAlignment="Left" Margin="7,26,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox Name="ProbeA2" HorizontalAlignment="Left" Height="22" Margin="43,52,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ProbeA2_TextChanged"/>
                <Label Content="A2:" HorizontalAlignment="Left" Margin="7,50,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox Name="ProbeA2theta" HorizontalAlignment="Left" Height="22" Margin="43,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ProbeA2theta_TextChanged"/>
                <Label Content="A2 θ:" HorizontalAlignment="Left" Margin="3,73,0,-1" VerticalAlignment="Top" Width="40" HorizontalContentAlignment="Right"/>
                <TextBox Name="ProbekV" HorizontalAlignment="Left" Height="22" Margin="138,4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ProbekV_TextChanged"/>
                <Label Content="kV:" HorizontalAlignment="Left" Margin="102,2,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox Name="Probebeta" HorizontalAlignment="Left" Height="22" Margin="138,28,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="Probebeta_TextChanged"/>
                <Label Content="β:" HorizontalAlignment="Left" Margin="102,26,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox Name="Probedelta" HorizontalAlignment="Left" Height="22" Margin="138,52,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="Probedelta_TextChanged"/>
                <Label Content="Δ:" HorizontalAlignment="Left" Margin="102,50,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox Name="ProbeAperture" HorizontalAlignment="Left" Height="22" Margin="138,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ProbeAperture_TextChanged"/>
                <Label Content="Aper:" HorizontalAlignment="Left" Margin="98,73,0,-1" VerticalAlignment="Top" Width="40" HorizontalContentAlignment="Right"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Imaging" HorizontalAlignment="Left" Height="120" Margin="871,0,0,0" VerticalAlignment="Top" Width="247.5" >
            <GroupBox.Foreground>
                <SolidColorBrush Color="{DynamicResource GroupBoxTitle}"/>
            </GroupBox.Foreground>
            <Grid HorizontalAlignment="Left" Height="98" VerticalAlignment="Top" Width="235">
                <TextBox Name="ImagingDf" HorizontalAlignment="Left" Height="22" Margin="43,4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ImagingDf_TextChanged"/>
                <Label Content="df:" HorizontalAlignment="Left" Margin="7,2,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox Name="ImagingCs" HorizontalAlignment="Left" Height="22" Margin="43,28,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ImagingCs_TextChanged"/>
                <Label Content="Cs:" HorizontalAlignment="Left" Margin="7,26,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox Name="ImagingA2" HorizontalAlignment="Left" Height="22" Margin="43,52,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ImagingA2_TextChanged"/>
                <Label Content="A2:" HorizontalAlignment="Left" Margin="7,50,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox Name="ImagingA2theta" HorizontalAlignment="Left" Height="22" Margin="43,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ImagingA2theta_TextChanged"/>
                <Label Content="A2 θ:" HorizontalAlignment="Left" Margin="3,73,0,-1" VerticalAlignment="Top" Width="40" HorizontalContentAlignment="Right"/>
                <TextBox Name="ImagingkV" HorizontalAlignment="Left" Height="22" Margin="138,4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ImagingkV_TextChanged"/>
                <Label Content="kV:" HorizontalAlignment="Left" Margin="102,2,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox Name="Imagingbeta" HorizontalAlignment="Left" Height="22" Margin="138,28,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="Imagingbeta_TextChanged"/>
                <Label Content="β:" HorizontalAlignment="Left" Margin="102,26,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox Name="Imagingdelta" HorizontalAlignment="Left" Height="22" Margin="138,52,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="Imagingdelta_TextChanged"/>
                <Label Content="Δ:" HorizontalAlignment="Left" Margin="102,50,0,0" VerticalAlignment="Top" Width="36" HorizontalContentAlignment="Right"/>
                <TextBox Name="ImagingAperture" HorizontalAlignment="Left" Height="22" Margin="138,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55" TextChanged="ImagingAperture_TextChanged"/>
                <Label Content="Aper:" HorizontalAlignment="Left" Margin="98,73,0,-1" VerticalAlignment="Top" Width="40" HorizontalContentAlignment="Right"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Simulation" HorizontalAlignment="Left" Height="120" Margin="1118.5,0,0,0" VerticalAlignment="Top" Width="140" >
            <GroupBox.Foreground>
                <SolidColorBrush Color="{DynamicResource GroupBoxTitle}"/>
            </GroupBox.Foreground>
            <Button Content="Simulate" HorizontalAlignment="Left" Height="80" Margin="10,10,0,0" VerticalAlignment="Top" Width="110" Click="Button_Click_1"/>
        </GroupBox>
        
        <!-- Left Image Tab Control-->
        <TabControl HorizontalAlignment="Left" Height="600" Margin="30,25,0,0" Grid.Row="1" VerticalAlignment="Top" Width="600">
            <TabItem Header="CTEM">
                <Grid Background="#FFE5E5E5">
                    <Image Name="CTEMImageDisplay" Height="500" Width="500"/>
                </Grid>
            </TabItem>
            <TabItem Header="EW">
                <Grid Background="#FFE5E5E5">
                    <Image Height="500" Width="500"/>
                </Grid>
            </TabItem>
        </TabControl>
        <!-- Right Image Tab Control-->
        <TabControl Height="600" Margin="0,25,30,0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right" Width="600">
            <TabItem Header="Diffraction">
                <Grid Background="#FFE5E5E5">
                    <Image Height="500" Width="500" Margin="-15,34,105,34"/>
                </Grid>
            </TabItem>
            <TabItem Header="N/A" IsEnabled="False">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="11*"/>
                        <ColumnDefinition Width="580*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="1" Height="500" Width="500"/>
                </Grid>
            </TabItem>
        </TabControl>
        
        <StatusBar HorizontalAlignment="Right" Height="34" Margin="0,636,0,0" Grid.Row="1" VerticalAlignment="Top" Width="1276" BorderThickness="0,1,0,0" BorderBrush="#FFC1C1C1">
            <Label Name="atomNumberLabel" Content="--" Width="400" HorizontalContentAlignment="Right" VerticalAlignment="Center" Height="34" Padding="0,5,15,3" Foreground="#FF575757" FontSize="11" Margin="440,0,0,0"/>
            <Label Name="fileNameLabel" Content="no structure loaded" Width="400" HorizontalContentAlignment="Right" VerticalAlignment="Center" Height="34" Padding="0,5,15,3" Foreground="#FF575757" FontSize="11" Margin="20,0,0,0"/>
            
        </StatusBar>
    </Grid>
</Window>
